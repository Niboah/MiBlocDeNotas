<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlocDeNotas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lprimaryColor</item>
        <item name="colorPrimaryVariant">@color/lprimaryDarkColor</item>
        <item name="colorOnPrimary">@color/lprimaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lprimaryColor</item>
        <item name="colorSecondaryVariant">@color/lprimaryLightColor</item>
        <item name="colorOnSecondary">@color/lprimaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/white</item>
    </style>
    <style name="Theme.BlocDeNotas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BlocDeNotas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.BlocDeNotas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Theme.BlocDeNotas.Fullscreen" parent="Theme.BlocDeNotas">
        <item name="android:actionBarStyle">@style/Widget.Theme.BlocDeNotas.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BlocDeNotas.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>